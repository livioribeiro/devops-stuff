{
  "data_dir": "/opt/consul",
  "server": true,
  "advertise_addr": "{{ ansible_all_ipv4_addresses|ipaddr('172.10.10.0/24')|first }}",
  "enable_script_checks": true,
  {% if ansible_hostname == 'server1' -%}
  "ui": true,
  "bootstrap_expect": 3,
  "addresses": {
    "http": "0.0.0.0"
  }
  {% else -%}
  "retry_join": [ "{{ hostvars['server1']['ansible_all_ipv4_addresses']|ipaddr('172.10.10.0/24')|first }}" ]
  {% endif %}
}
