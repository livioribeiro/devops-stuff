{
  "data_dir": "/opt/consul",
  "server": true,
  "advertise_addr": "{{ ansible_host }}",
  "client_addr": "127.0.0.1 {{ ansible_host }}",
  "enable_script_checks": true,
  {% if ansible_hostname == 'server1' -%}
  "ui": true,
  "bootstrap_expect": 3
  {% else -%}
  "retry_join": [ "{{ hostvars.server1.ansible_host }}" ]
  {% endif %}
}
